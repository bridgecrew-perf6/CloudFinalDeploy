<div id="<%= dom_id question %>">
    <!-- Title -->
    <h2><%= question.title %></h2>

    <!-- Level -->
    <div>
        <strong>Level:</strong>
        <%= question.level %>
    </div>    

    <!-- Question -->
    <div>
        <strong>Question:</strong>
        <%= question.body %>
    </div>

    <!-- KeyWord -->
    <div>
        <strong>Keyword:</strong>
        <%= question.keyword %>
    </div>

    <!-- Prompt -->
    <div>
        <strong>Prompt:</strong>
        <%= question.prompt %>
    </div>

    <!-- Answer -->
    <div id="answer-div-<%= question.id %>" class="d-none">
        <strong>Answer:</strong>
        <%= question.answer %>
    </div>
</div>

<%= link_to "Show Answer", nil, remote: true, class: "btn btn-danger", id: "toggle-button-#{question.id}", 
    data: { 
        controller: "questions", 
        action: "questions#toggleAnswer",
        questions_toggle_param: "toggle-button-#{question.id}",
        questions_answer_param: "answer-div-#{question.id}",
} %>
