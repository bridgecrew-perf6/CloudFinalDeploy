<div id="<%= dom_id writing %>">
    
    <!-- Title -->
    <h2><%= writing.title %></h2>

    <!-- Name of User -->
    <h4>Writing by <%= link_to writing.user.name, user_path(writing.user) %> </h4>

    <!-- Time when comment Posted -->
    <span>Submitted <%= time_ago_in_words(writing.created_at) %> ago</span>
    
    <!-- Writing Body -->
    <div>
        <%= writing.body %>
    </div>
</div>
