<p style="color: green"><%= notice %></p>

<div class="container">
    <!-- Heading  -->
    <h1>Readings</h1>

    <!-- Renders All Readings -->
    <div id="readings">
        <% @readings.each do |reading| %>
        <%= render reading %>
            <p>
                <%= link_to "Show this reading", reading %>
            </p>
        <% end %>
    </div>
</div>