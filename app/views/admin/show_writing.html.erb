<div class="container">
    <!-- Admin Links -->
    <h1 class="text-center">Administrator</h1>
    <%= render 'admin/nav_links' %>

    <!-- Buttons for editing and deleting writing -->
    <div class="text-center mt-5">
        <div class="btn-group">
            <%= link_to "Edit", edit_writing_path(@writing), class: "btn btn-warning" %>
            <%= button_to "Delete", @writing, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </div>
    <div>

    <!-- Title -->
    <div class="row mt-1">
        <p>
            <strong>Title:</strong> <%= @writing.title %>
        </p>
    </div>

    <!-- User -->
    <div class="row mt-1">
        <p>
            <strong>User:</strong> <%= @writing.user.name %>
        </p>
    </div>

    <!-- Writing -->
    <div class="row mt-1">
        <%= @writing.body %>
    </div>

    

    <div class="row mt-1">
        <!-- Number of Correction -->
        <strong><%= pluralize(@writing.corrections.count, "Correction") %></strong>

        <!-- Render each comment -->
        <% @writing.corrections.each do |correction| %>
            <div class="row mt-1">
                <%= correction.user.name %>
                <%= correction.body %>
            </div>
        <% end %>
    </div>
</div>