<p style="color: green"><%= notice %></p>

<div class="container">
    <!-- Render Writing -->
    <%= render @writing %>

    <div>
        <!-- Link to Edit Writing -->
        <%= link_to "Edit this writing", edit_writing_path(@writing) %> |

        <!-- Link back to all Writings -->
        <%= link_to "Back to writings", writings_path %>

        <!-- Button to Destroy Writing -->
        <%= button_to "Destroy this writing", @writing, method: :delete %>
    </div>
</div>


<div class="container">
    <!-- Corrections Form -->
    <%= render 'corrections/form', writing: @writing, correction: @writing.corrections.build, submit_label: "Reply" %>

    <!-- Render Corrections -->
    <% @corrections.each do |correction| %>
        <%= render 'corrections/correction', writing: @writing, correction: correction %>
    <% end %>
</div>