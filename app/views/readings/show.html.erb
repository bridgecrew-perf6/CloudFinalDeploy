<div class="container">
    <!-- Render Reading -->
    <%= render @reading %>

    <div>
        <!-- Link to Edit Reading -->
        <%= link_to "Edit this reading", edit_reading_path(@reading) %> |

        <!-- Link back to all Readings -->
        <%= link_to "Back to readings", readings_path %>

        <!-- Button to Destroy Reading -->
        <%= button_to "Destroy this reading", @reading, method: :delete %>
    </div>
</div>

<div class= "container">
    <h4>Which Paragraph?</h4>

    <% @reading_problems.each do |reading_problem| %>
        <%= render 'reading_problems/reading_problem', reading: @reading, reading_problem: reading_problem %>
    <% end %>

    <%= render 'reading_problems/form', reading: @reading %>
</div>