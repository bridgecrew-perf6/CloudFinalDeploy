<div class="container">
    <h1 class="text-center">Administrator</h1>
    <%= render 'admin/nav_links' %>

    <%= link_to "Add new Reading", new_reading_path %>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Level</th>
                <th scope="col">Problems</th>
            </tr>
        </thead>

        <tbody>
            <% @readings.each do |reading| %>
                <tr>
                    <th scope="row"><%= reading.id %></th>
                    <td><%= link_to reading.title.truncate(15), admin_reading_path(reading) %></td>
                    <td><%= reading.level %></td>
                    <td><%= pluralize(reading.reading_problems.size, "Problem") %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>