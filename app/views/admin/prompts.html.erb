<div class="container">
    <h1 class="text-center">Administrator</h1>
    <%= render 'admin/nav_links' %>

    <%= link_to "Add new Prompt", new_prompt_path %>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Level</th>
            </tr>
        </thead>

        <tbody>
            <% @prompts.each do |prompt| %>
                <tr>
                    <th scope="row"><%= prompt.id %></th>
                    <td><%= link_to prompt.topic.truncate(15), admin_prompt_path(prompt) %></td>
                    <td><%= prompt.level %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>