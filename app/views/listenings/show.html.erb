<div class="container">
    <!-- Render Listening -->
    <%= render @listening %>

    <div>
        <!-- Link to Edit Listening -->
        <%= link_to "Edit this listening", edit_listening_path(@listening) %> |

        <!-- Link back to all Listenings -->
        <%= link_to "Back to listenings", listenings_path %>

        <!-- Button to Destroy Listening -->
        <%= button_to "Destroy this listening", @listening, method: :delete %>
    </div>
</div>

<div class= "container">
    <% @listening_options.each do |listening_option| %>
        <%= render 'listening_options/listening_option', listening: @listening, listening_option: listening_option %>
    <% end %>

    <%= render 'listening_options/form', listening: @listening %>
</div>